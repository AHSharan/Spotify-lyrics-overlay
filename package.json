{
  "name": "electron-spotify-lyrics",
  "version": "1.0.0",
  "description": "Desktop overlay (Electron) showing Spotify now-playing + lyrics (Lyrics.ovh + Genius fallback)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"node server.js\" \"electron .\"",
    "dev-win": "start /B node server.js && electron .",
    "server": "node server.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Sharan",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "node-fetch": "^2.6.7",
    "open": "^8.4.0"
  },
  "devDependencies": {
    "electron": "^20.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.ahsharan.spotify-lyrics-overlay",
    "productName": "Spotify Lyrics Overlay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!lyrics_cache/**",
      "!.env",
      "!.cache"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
